<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.karthik.defusethebomb.blasting">
 <LinearLayout
     android:layout_width="wrap_content"
     android:layout_height="wrap_content">
 <VideoView
     android:id="@+id/videoView"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"

     android:paddingLeft="30dp">
 </VideoView>
</LinearLayout>
 <TextView
     android:id="@+id/det"
     android:textColor="#ffffff"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginLeft="@dimen/_20sdp"
     android:layout_marginTop="@dimen/_15sdp"
     android:text="BOMB DETONATED !!"
     android:textSize="56sp" />

 <TextView
     android:id="@+id/sc"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:textColor="#ffffff"
     android:layout_marginLeft="@dimen/_80sdp"
     android:layout_marginTop="@dimen/_140sdp"
     android:text="Score - "
     android:textSize="56sp" />

 <TextView
     android:id="@+id/sscore"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:textColor="#ffffff"
     android:layout_marginLeft="@dimen/_220sdp"
     android:layout_marginTop="@dimen/_140sdp"
     android:text="0"
     android:textSize="56sp" />

 <TextView
     android:id="@+id/hs"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:textColor="#ffffff"
     android:visibility="invisible"
     android:layout_marginLeft="@dimen/_80sdp"
     android:layout_marginTop="@dimen/_200sdp"
     android:text="High Score - "
     android:textSize="36sp"
     />

 <TextView
     android:id="@+id/highscore"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginLeft="@dimen/_240sdp"
     android:layout_marginTop="@dimen/_200sdp"
     android:text="0"
     android:visibility="invisible"
     android:textColor="#ffffff"
     android:textSize="36sp" />

 <Button
     android:id="@+id/mm"
     style="@style/Widget.AppCompat.Button.Borderless"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginLeft="@dimen/_30sdp"

     android:layout_marginTop="@dimen/_350sdp"
     android:text="Main Menu"
     android:textSize="44sp" />

 <Button
     android:id="@+id/retry"
     style="@style/Widget.AppCompat.Button.Borderless"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginLeft="@dimen/_220sdp"

     android:layout_marginTop="@dimen/_350sdp"
     android:text="Retry"
     android:textSize="44sp" />

</FrameLayout>
